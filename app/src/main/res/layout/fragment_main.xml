                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.25"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="specialKey"
                android:src="@drawable/ic_keyboard_tab_grey_50_24dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial22"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.25"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="specialKey"
                android:src="@drawable/ic_keyboard_arrow_left_grey_50_24dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial23"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.25"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="specialKey"
                android:src="@drawable/ic_keyboard_arrow_right_grey_50_24dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial24"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.25"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="specialKey"
                android:src="@drawable/ic_apps_grey_50_24dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial25"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.25"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="specialKey"
                android:src="@drawable/ic_content_paste_grey_50_24dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial26"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.25"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="specialKey"
                android:src="@drawable/ic_select_all_grey_50_24dp">
            </ImageButton>
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonmouseleft"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/btn_theme"
            android:onClick="leftClick"
            android:text="@null"/>

        <Button
            android:id="@+id/buttonmouseright"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/btn_theme"
            android:onClick="rightClick"
            android:text="@null"/>
    </LinearLayout>

</LinearLayout>