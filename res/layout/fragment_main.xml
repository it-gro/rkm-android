<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="true"
            android:inputType="text|textNoSuggestions|textMultiLine"
            android:maxLines="2"
            android:paddingStart="5dip"
            android:text="@string/edit_text_empty"
            android:textColor="#FFF"
            android:textIsSelectable="false" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:onClick="showSpecialButtons"
            android:scaleType="centerInside"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/SpecialButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:visibility="visible" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/buttonspecial11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_up" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_down" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_menu" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_esc" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_cut" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:longClickable="true"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_copy" >
            </ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/buttonspecial21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_tab" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_left" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_right" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_logo" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_paste" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonspecial26"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/sbtn_theme"
                android:onClick="specialKey"
                android:src="@drawable/ic_btn_select_all" >
            </ImageButton>
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonmouseleft"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/btn_theme"
            android:onClick="leftClick"
            android:text="@null" />

        <Button
            android:id="@+id/buttonmouseright"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/btn_theme"
            android:onClick="rightClick"
            android:text="@null" />
    </LinearLayout>

</LinearLayout>